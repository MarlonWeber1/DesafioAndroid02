<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaInfoFilmeActivity">

    <ImageView
        android:id="@+id/bannerFilme"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/nomeFilme"
        android:layout_width="193dp"
        android:layout_height="31dp"
        android:layout_marginEnd="184dp"
        android:text="Nome Filme"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bannerFilme"
        app:layout_constraintVertical_bias="0.089" />

    <TextView
        android:id="@+id/bindingNomeFilme"
        android:layout_width="90dp"
        android:layout_height="22dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="276dp"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nomeFilme"
        tools:text="teste" />

    <TextView
        android:id="@+id/dataDeLançamento"
        android:layout_width="240dp"
        android:layout_height="33dp"
        android:layout_marginEnd="136dp"
        android:text="Data de lançamento"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/nomeFilme"
        app:layout_constraintTop_toBottomOf="@+id/bindingNomeFilme"
        app:layout_constraintVertical_bias="0.047" />

    <TextView
        android:id="@+id/bindingDataLancamento"
        android:layout_width="90dp"
        android:layout_height="22dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="276dp"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dataDeLançamento"
        tools:text="teste" />

    <TextView
        android:id="@+id/descricao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descrição"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bindingDataLancamento"
        app:layout_constraintVertical_bias="0.08" />

    <TextView
        android:id="@+id/bindingDescricao"
        android:layout_width="348dp"
        android:layout_height="217dp"
        android:layout_marginTop="5dp"
        android:text="teste"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descricao"
        app:layout_constraintVertical_bias="0.125" />

</androidx.constraintlayout.widget.ConstraintLayout>