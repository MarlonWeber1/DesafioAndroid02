<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaInfoFilmeActivity">

    <ImageView
        android:id="@+id/bannerFilme"
        android:layout_width="215dp"
        android:layout_height="240dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/nomeFilme"
        android:layout_width="145dp"
        android:layout_height="22dp"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.341"
        app:layout_constraintStart_toEndOf="@+id/bannerFilme"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.058"
        tools:text="Nome Filme" />

    <TextView
        android:id="@+id/bindingNomeFilme"
        android:layout_width="90dp"
        android:layout_height="22dp"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.321"
        app:layout_constraintStart_toEndOf="@+id/bannerFilme"
        app:layout_constraintTop_toBottomOf="@+id/nomeFilme"
        tools:text="Nome Filme1" />

    <TextView
        android:id="@+id/dataDeLançamento"
        android:layout_width="145dp"
        android:layout_height="22dp"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.341"
        app:layout_constraintStart_toEndOf="@+id/bannerFilme"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.148"
        tools:text="Data de lançamento" />

    <TextView
        android:id="@+id/bindingDataLancamento"
        android:layout_width="90dp"
        android:layout_height="22dp"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.32"
        app:layout_constraintStart_toEndOf="@+id/bannerFilme"
        app:layout_constraintTop_toBottomOf="@+id/dataDeLançamento"
        tools:text="Nome Filme1" />

</androidx.constraintlayout.widget.ConstraintLayout>